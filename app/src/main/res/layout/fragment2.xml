<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Fragment2"
              android:orientation="vertical">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <TextView
                    android:text="DEPART"
                    android:textSize="25sp"
                    android:textColor="#cc0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departTextView"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_weight="1"/>
            <TextView
                    android:text="16 SEP 2019"
                    android:textSize="20sp"
                    android:textColor="#8e8e8e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departDateTextView"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:gravity="right"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <TextView
                    android:text="Free seats: 3"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departFreeSeatsTextView"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_weight="1"/>
            <TextView
                    android:text="435 BYN"
                    android:textSize="22sp"
                    android:textColor="#737373"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departCostTextView"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:gravity="right"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <TextView
                    android:text="MSQ"
                    android:textSize="38sp"
                    android:textColor="#77ca27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departStartTextView"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:layout_weight="1"/>
            <ImageView
                    android:src="@drawable/ic_flight_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:rotation="90"
                    android:id="@+id/departFlightImageView"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginStart="34dp"
                    android:layout_weight="1"
                    android:gravity="center"/>
            <TextView
                    android:text="FLO"
                    android:textSize="38sp"
                    android:textColor="#77ca27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/departDestinyTextView"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="3">
                <TextView
                        android:text="00:20"
                        android:textSize="18sp"
                        android:textColor="#979797"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/departStartTimeTextView"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@drawable/ic_flight_takeoff_black_24dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/departUpAirplaneImageView"

                        android:layout_weight="5"/>
                <ImageView
                        android:src="@drawable/ic_trending_flat_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/departArrowImageView"
                        android:layout_weight="10"/>
                <TextView
                        android:text="09:20"
                        android:textSize="18sp"
                        android:textColor="#979797"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/departEndTimeTextView"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@drawable/ic_flight_land_black_24dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/departDownAirplaneImageView"
                        android:layout_weight="5"/>
            </LinearLayout>
            <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="1">
                <ImageView
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/departClockImageView"
                        android:layout_weight="10"
                        android:gravity="end"/>
                <TextView
                        android:text="9:00"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/departFlyingTimeTextView"
                        android:layout_marginEnd="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_weight="1"
                        android:gravity="end"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8E8E8E"
            android:id="@+id/horizontalLine1"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <TextView
                    android:text="RETURN"
                    android:textSize="25sp"
                    android:textColor="#0099cc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/returnTextView"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_weight="1"/>
            <TextView
                    android:text="17 SEP 2019"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/returnDateTextView"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:gravity="right"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <TextView
                    android:text="Free seats: 5"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/returnFreeSeatsTextView"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_weight="1"/>
            <TextView
                    android:text="488 BYN"
                    android:textSize="22sp"
                    android:textColor="#737373"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/returnCostTextView"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:gravity="right"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <TextView
                    android:text="FLO"
                    android:textSize="38sp"
                    android:textColor="#77ca27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="44dp"
                    android:layout_marginLeft="44dp"
                    android:id="@+id/returnStartTextView"
                    android:layout_weight="1"/>
            <ImageView
                    android:src="@drawable/ic_flight_black_24dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:rotation="90"
                    android:id="@+id/returnFlightImageView"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginStart="34dp"
                    android:gravity="center"
                    android:layout_weight="1"/>
            <TextView
                    android:text="MSQ"
                    android:textSize="38sp"
                    android:textColor="#77ca27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/returnDestinyTextView"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="60dp"
                    android:gravity="right"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="3">
                <TextView
                        android:text="05:10"
                        android:textSize="18sp"
                        android:textColor="#979797"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/returnStartTimeTextView"
                        android:layout_marginLeft="32dp"
                        android:layout_marginStart="32dp"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@drawable/ic_flight_takeoff_black_24dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/returnUpAirplaneImageView"

                        android:layout_weight="5"/>
                <ImageView
                        android:src="@drawable/ic_trending_flat_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/returnArrowImageView"
                        android:layout_weight="10"/>
                <TextView
                        android:text="09:20"
                        android:textSize="18sp"
                        android:textColor="#979797"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/returnEndTimeTextView"
                        android:layout_weight="1"/>
                <ImageView
                        android:src="@drawable/ic_flight_land_black_24dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/returnDownAirplaneImageView"
                        android:layout_weight="5"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                <ImageView
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/returnClockImageView"
                        android:layout_weight="10"
                        android:gravity="end"/>
                <TextView
                        android:text="4:10"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/returnFlyingTimeTextView"
                        android:layout_marginEnd="32dp"
                        android:layout_marginRight="32dp"
                        android:layout_weight="1"
                        android:gravity="end"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8E8E8E"
            android:id="@+id/horizontalLine2"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_check_circle_black_24dp"
            android:id="@+id/confirmButton"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </FrameLayout>
</LinearLayout>